<UserControl x:Class="RAMDesktopUI.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAMDesktopUI.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem x:Name="Exit" Header="E_xit" Width="50"/>
            </MenuItem>
            <MenuItem Header="_Users"  Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                <MenuItem x:Name="UserManagement" Header="User_Management"/>
            </MenuItem>
            <MenuItem Header="_Account">
                <MenuItem x:Name="LogOut" Header="_Log Out" Width="50"/>
            </MenuItem>
        </Menu>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3" Margin="0 0 0 20"
                   HorizontalAlignment="Center" FontSize="30">
            RSV Asset Manager
            </TextBlock>
            <Button x:Name="LaunchCreateOrder" Grid.Column="1" Grid.Row="1" Width="100" Margin="10">
                Create Order
            </Button>

            <Button x:Name="LaunchOrderManager" Grid.Column="2" Grid.Row="1" Width="100" Margin="10">
                View Orders
            </Button>

            <Button x:Name="LaunchPortfolioManager" Grid.Column="3" Grid.Row="1" Width="100" Margin="10">
                View Positions
            </Button>
            <Button x:Name="LaunchFundAllocater" Grid.Column="1" Grid.Row="2" Width="100" Margin="10">
                Allocate Orders
            </Button>
            <Button x:Name="LaunchWatchlist" Grid.Column="2" Grid.Row="2" Width="100" Margin="10">
                Watchlist
            </Button>
            <Button x:Name="LaunchImport" Grid.Column="3" Grid.Row="2" Width="100" Margin="10">
                Import Trades
            </Button>
        </Grid>
    </DockPanel>
</UserControl>
