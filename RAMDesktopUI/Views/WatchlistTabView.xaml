<UserControl x:Class="RAMDesktopUI.Views.WatchlistTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAMDesktopUI.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol" 
             xmlns:controls="clr-namespace:RAMDesktopUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <hc:SimplePanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ToggleButton HorizontalAlignment="Stretch" Grid.Row="0" Padding="0" FontSize="8" Height="12" Content="Overview" IsChecked="{Binding IsOpen, Mode=TwoWay, ElementName=OverviewDrawer}"/>
            <controls:RSVDataGrid x:Name="Tab1SymbolRows" Grid.Row="1" CanUserAddRows="False" 
                  CanUserDeleteRows="False" IsReadOnly="True" HeadersVisibility="All"
                  CanUserResizeRows="False" AutoGenerateColumns="True" >
            </controls:RSVDataGrid>
        </Grid>
        <hc:Drawer Name="OverviewDrawer" Dock="Top" ShowMask="False">
            <Border Background="{DynamicResource RegionBrush}" Height="100" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                        <TextBlock Margin="10,0,0,0" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Text="Overview" Style="{StaticResource TextBlockTitle}" HorizontalAlignment="Center"/>
                    <Button Command="hc:ControlCommands.Close" Grid.Row="0" Grid.Column="4" HorizontalAlignment="Right" Foreground="{DynamicResource PrimaryTextBrush}" Style="{StaticResource ButtonIcon}" hc:IconElement.Geometry="{StaticResource DeleteFillCircleGeometry}"/>
                    <hc:TextBox x:Name="Symbol" Grid.Row="1" Grid.Column="0" Width="150"/>
                    <Button x:Name="AddSymbol" Grid.Row="1" Grid.Column="1" Content="Add Symbol"/>
                    <Button x:Name="ImportSymbols" Grid.Row="1" Grid.Column="2" Content="Import Symbols"/>
                </Grid>
            </Border>
        </hc:Drawer>
    </hc:SimplePanel>
</UserControl>
